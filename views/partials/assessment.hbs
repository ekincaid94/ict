{{> membermenu }}
<section class="ui center aligned middle aligned segment">
    <h2 class="ui header">
        {{member.firstName}}
    </h2>
<form class="ui stacked segment form" action="/assessment/{{member.id}}/updateassessment/{{assessment.id}}" method="POST">
    <div class="four fields">
      <div class="field">
            <label>Date</label>
            <input placeholder="dd/mm" type="text" name="date" >
        </div>
        <div class="field">
            <label>Weight</label>
            <input placeholder="Kg" type="number" name="weight" >
        </div>
        <div class="field">
            <label>Chest</label>
            <input placeholder="00.00cm" type="number" name="chest" >
        </div>
        <div class="field">
            <label>Thigh</label>
            <input placeholder="00.00cm" type="number" name="thigh">
        </div>
  </div>
  <div class ="four fields">
        <div class="field">
            <label>Upper Arm</label>
            <input placeholder="00.00cm" type="number" name="upperArm">
        </div>
        <div class="field">
            <label>Waist</label>
            <input placeholder="00.00cm" type="number" name="waist">
        </div>
        <div class = "field">
            <label>Hips</label>
            <input placeholder="00.00cm" type="number" name="hips">
        </div>
    </div>
    <button class="ui blue submit button">Update Member</button>
</form>
</section>